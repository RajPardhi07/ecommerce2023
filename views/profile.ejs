<% include ./partials/header.ejs %>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: gilroy;

        }

        html,
        body {
            background-color: lightblue;
            width: 100%;
            height: 100%;

        }

        #top {
            width: 100%;
            height: 40vh;
            background-color: lightseagreen;
            display: flex;
            align-items: center;
            gap: 40px;
            padding: 0 20px;

        }

        .photo {
            width: 13vw;
            height: 13vw;
            border-radius: 50%;

        }

        .photo img {
            width: 90%;
            height: 90%;
            object-fit: cover;
            border-radius: 50%;

        }

        .parentcircle {
            position: relative;
        }


        .parentcircle:hover i {
            opacity: 1;
        }

        .parentcircle i {
            padding: 7px 9px;
            right: 3px;
            top: 3vw;
            opacity: 0;
            border-radius: 50px;
            background-color: gray;
            position: absolute;
            color: white;

        }


        #top h3 {
            font-size: 5vw;
            font-family: gilroy;
        }

        #top h4 {
            font-size: 1.5vw;
            font-weight: 500;
        }

        #uploadpic {
            display: none;
        }
    </style>
    </head>

    <body>
        <div id="top">
            <form id="uploadpic" action="/upload" method="post" enctype="multipart/form-data">
                <input id="fileinp" type="file" name="image" />
            </form>

            <div class="parentcircle">
                <div class="pencil"><i class="ri-pencil-fill"></i></div>


                <div class="photo">

                    <img src="../images/uploads/<%= userdets.image %>" alt="">
                </div>
            </div>

            <div class="text">

                <h3>
                    <%= userdets.username %>
                </h3>
                <h4>
                    <%= userdets.email %>
                </h4>
            </div>
            <div id="categories">
                <a href="/men">Men</a>
                <a href="/women">Women</a>
                <a href="/kids">Kids</a>
              </div>
          
        </div>
        <div id="bottom">
            <form action="/post" method="post" enctype="multipart/form-data">

                <input type="file" name="postimage" id="postimage">
                <div class="form-floating">
                    <textarea name="post" class="form-control" placeholder="Shoes Name" id="floatingTextarea2"
                        style="height: 90px"></textarea>
                        
                    <label for="floatingTextarea2"></label>
                </div>
                <input type="text" name="brand" placeholder="Brand Name">

                <input type="number" name="price" placeholder="Price">
                <input type="button" value="Upload Image" id="uploadimage">
                <select name="tag">
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="kids">Kids</option>

                </select>
                <input type="submit" id="upbtn" value="Post">

            </form>
        </div>

        

        <script>
            document.querySelector("#fileinp").addEventListener("change", function () {
                document.querySelector("#uploadpic").submit();
            })

            document.querySelector(".pencil").addEventListener("click", function () {
                document.querySelector("#fileinp").click();
            })

            document.querySelector("#uploadimage").addEventListener("click", function () {

                document.querySelector("#postimage").click();
            })

            document.querySelector("#uploadwomenimage").addEventListener("click", function () {

                document.querySelector("#postwomenimage").click();
            })

            // Add event listeners for Men, Women, and Kids categories
    document.querySelector("#categories a[href='/men']").addEventListener("click", function (event) {
      event.preventDefault();
      // Redirect to the men's category page
      window.location.href = "/men";
    });

    document.querySelector("#categories a[href='/women']").addEventListener("click", function (event) {
      event.preventDefault();
      // Redirect to the women's category page
      window.location.href = "/women";
    });

    document.querySelector("#categories a[href='/kids']").addEventListener("click", function (event) {
      event.preventDefault();
      // Redirect to the kids category page
      window.location.href = "/kids";
    });

        </script>
