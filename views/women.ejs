<% include ./partials/header.ejs %>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: gilroy;

    }

    html,
    body {
      width: 100%;
      height: 100%;

    }

    .pic {

      /* width: 22vw; */
      height: 75%;

      /* height: 45vh; */
      /* background-color: green; */
      object-fit: cover;
      display: flex;
      align-items: center;
      justify-content: center;

    }

    .pic img {
      height: 40vh;
      object-fit: cover;
    }

    .center {
      width: 100%;
      /* background-color: red; */
      margin-bottom: 2vw;

      display: flex;
      justify-content: flex-start;
      flex-wrap: wrap;
    }

    .box {

      margin-left: 0.5vw;

      width: 24vw;
      position: relative;
      height: 72vh;
      background-color: lightgray;
      overflow: hidden;

      margin-bottom: 1vw;
      border-radius: 5px;
      overflow: hidden;


    }

    .uper {
      width: 100%;
      height: 18vh;
    }

    .text {
      transition: all ease 0.4s;
      /* background-color: lightpink; */
      height: 19vh;
      display: flex;
      justify-content: space-between;
      padding: 0 10px;
    }

    .text-back {
      height: 5vh;
      position: absolute;
      z-index: 9999;
      width: 100%;
      top: 93%;
      transition: all ease 0.4s;

      opacity: 0;
      background-color: lightgray;
      /* background-color: #FF9F00; */
    }

    .text-back h4 {
      font-weight: 500;
      font-size: 20px;
      text-align: center;
    }

    .text-back h4 span {
      color: #33bd96;
      font-weight: bold;
    }

    .text-back:hover {
      opacity: 1;

    }

    .text a {
      font-size: 22px;
      color: rgb(63, 62, 62);
      margin-bottom: 5px;

    }

    .text a {
      font-weight: 500;

      font-size: 18px;
      color: black;
      /* margin-bottom: 5px; */
    }

    .text h5 {
      font-size: 18px;
      margin-top: 6px;
      font-weight: 500;
      /* color: rgb(114, 112, 112); */
      color: rgb(78, 76, 76);
    }

    .text h6 {
      font-size: 18px;
      margin-top: 1.9vw;
      font-weight: 500;
      color: #FF9F00;
    }

    .text h6 span {
      color: black;
    }

    .text p {
      font-size: 18px;
      margin-bottom: 6px;
      font-family: monument;

      font-weight: 500;
      letter-spacing: 1px;
      /* color: #2FA849; */
      /* color: #33bd96; */
      color: #114689;
    }

    .thumb {
      width: 5vw;
      display: flex;
      align-items: center;
      height: 5vh;
    }



    .thumb button {
      width: 60px;
      height: 29px;
      margin-left: 2vw;
      font-size: 16px;
      border-radius: 50px;
      border-top-left-radius: 0px;
      border: none;
      color: white;
      /* background-color: #34A888; */
      background-color: #114689;
    }
    .like{
margin-left: 86%;

    }

    @media (max-width:600px) {
      .box {
        margin-top: 2vw;


        width: 97vw;
        position: relative;
        height: 50vh;
        background-color: lightgray;
        overflow: hidden;

        border-radius: 5px;
        overflow: hidden;


      }

      .pic {

        /* width: 22vw; */
        height: 60%;

        /* height: 45vh; */
        object-fit: cover;
        display: flex;
        align-items: center;
        justify-content: center;

      }
      .uper2 {
      width: 100%;
      height: 20vh;
      background-color: #a8bd33;
      background-image: url(../images/uploads/MEN_Main_category_5_1080x\ \(1\).jpg);
      background-position: center;
      background-size: cover;
    }

      .pic img {
        height: 30vh;
        object-fit: cover;
      }
    }
  </style>

  </head>

  <body>

    <div class="uper"></div>
    <div class="center">


      <% if (user) { %>
        <!-- <p>Welcome, <%= user.username %>!</p> -->
        <% } %>

          <% if (posts && posts.length> 0) { %>
            <% posts.forEach(function(post) { %>

              <div class="box">

                <a class="like" href="/likepost/<%= post._id %>" >

                   <%= post.likes.indexOf(post.id)===-1 ? "🤍" : "💙" %> </a> 
               
               
                   <div class="pic">

                  <!-- Display post details as needed -->
                  <img src="<%= '/images/uploads/' + post.postimage %>" alt="Post Image">
                </div>

                <div class="text">

                  <div class="text-up">

                    <p>
                      <%= post.brand %>
                    </p>
                    <a href="/post/<%= post._id %>">
                      <%= post.data %>
                    </a>
                    <!-- <h4>
                      <%= post.data %>
                    </h4> -->
                    <h5>MRP: <%= post.price %>
                    </h5>

                  </div>

                  <div class="thumb">
                    <button>Like</button>

                  </div>
                </div>

                <div class="text-back">

                  <h4><span>Size</span> - 6,7,8,9</h4>
                </div>


                <!-- Add more details as needed -->

              </div>
              <% }); %>

                <% } else { %>
                  <p>No posts found for the "male" tag.</p>



                  <!-- Add navigation or other content as needed -->
                  <% } %>



    </div>

    <% include ./partials/footer.ejs %>